<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detailItemPhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_image_placeholder" />

        <TextView
            android:id="@+id/detailItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/detailItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detailed description of the lost or found item. This can be quite long and descriptive, providing all necessary information for identification."
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/detailItemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: Electronics"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/detailItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: XYZ Station"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/detailItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2023-07-20"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/detailItemPostedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted By: John Doe"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/detailItemStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_blue_dark"/>

    </LinearLayout>
</ScrollView>